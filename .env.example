# WorkNomads Environment Configuration
# Copy this file to .env and update the values for your environment
# DO NOT commit .env to version control - add it to .gitignore

# =================================================================
# DJANGO SETTINGS
# =================================================================

# Django Secret Keys (generate new ones for production)
# Use: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
AUTH_SECRET_KEY=django-insecure-generate-new-key-for-production
BACKEND_SECRET_KEY=django-insecure-generate-new-key-for-production

# JWT Shared Signing Key (must be same for both services)
# Use: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SIGNING_KEY=9e7cdbb3a8f14d55a1f1b6f45d8c9025a79d32d44c91807b2f3c9a64f8b5a12f

# Environment Settings
DEBUG=True
DJANGO_ENV=development

# Allowed Hosts (comma-separated, no spaces)
ALLOWED_HOSTS=localhost,127.0.0.1,192.168.100.9

# =================================================================
# DATABASE CONFIGURATION
# =================================================================

# PostgreSQL Database Settings
DB_ENGINE=django.db.backends.postgresql
DB_HOST=localhost
DB_PORT=5432
DB_USER=django_user
DB_PASSWORD=password

# Database Names (separate databases for each service)
AUTH_DB_NAME=auth_db
BACKEND_DB_NAME=backend_db

# Alternative: SQLite for development (comment above PostgreSQL settings)
# DB_ENGINE=django.db.backends.sqlite3
# AUTH_DB_NAME=db_auth.sqlite3
# BACKEND_DB_NAME=db_backend.sqlite3

# =================================================================
# CORS & SECURITY SETTINGS
# =================================================================

# CORS Origins (for web clients)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Security Settings (set to False in production)
CORS_ALLOW_ALL_ORIGINS=True

# =================================================================
# JWT TOKEN SETTINGS
# =================================================================

# Token Lifetimes (in minutes for access, days for refresh)
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=30
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7
JWT_ROTATE_REFRESH_TOKENS=True
JWT_BLACKLIST_AFTER_ROTATION=True

# =================================================================
# DEVELOPMENT SETTINGS
# =================================================================

# Local network IP (auto-detected by gateway)
LOCAL_NETWORK_IP=192.168.100.9

# Gateway settings
GATEWAY_HOST=0.0.0.0
GATEWAY_PORT=3000

# =================================================================
# PRODUCTION NOTES
# =================================================================
# For production deployment:
# 1. Set DEBUG=False
# 2. Generate new SECRET_KEYs
# 3. Generate new JWT_SIGNING_KEY
# 4. Update database credentials
# 5. Set proper ALLOWED_HOSTS
# 6. Configure CORS_ALLOWED_ORIGINS (remove CORS_ALLOW_ALL_ORIGINS)
# 7. Use environment-specific database settings
